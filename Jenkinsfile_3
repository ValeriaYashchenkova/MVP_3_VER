pipeline {
    agent {
        kubernetes {
            inheritFrom 'python'
        }
    }

    parameters {
        string(name: 'BRANCH_NAME', defaultValue: 'master')
    }

    stages {

        stage('Install deps') {
            steps {
                container('python-builder') {
                    sh '''
                        python3.11 -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip
                        pip install oracledb gitpython requests tomli
                    '''
                }
            }
        }

        stage('Run tests') {
            steps {
                container('python-builder') {
                    withCredentials([
                        usernamePassword(credentialsId: 'git_pass', usernameVariable: 'GIT_USER', passwordVariable: 'GIT_PASS'),
                        usernamePassword(credentialsId: 'oracle-db-creds', usernameVariable: 'DB_USER', passwordVariable: 'DB_PASS')
                    ]) {
                        sh '''
                            echo "CHECK CREDS:"
                            env | grep GIT_

                            . venv/bin/activate

                            python run_test.py \
                                --branch "${BRANCH_NAME}" \
                                --git-user "${GIT_USER}" \
                                --git-pass "${GIT_PASS}" \
                                --db-user "${DB_USER}" \
                                --db-pass "${DB_PASS}"
                        '''
                    }
                }
            }
        }
    }
}
